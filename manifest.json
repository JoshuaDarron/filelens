{
  "manifest_version": 3,
  "name": "FileLens",
  "version": "2.0.0",
  "description": "View, edit and export CSV, JSON, TXT, and Markdown files with light/dark mode support",
  "permissions": [
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "action": {
    "default_title": "Open FileLens"
  },
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*.csv",
        "*://*/*.csv?*",
        "*://*/*.json",
        "*://*/*.json?*",
        "*://*/*.txt",
        "*://*/*.txt?*",
        "*://*/*.md",
        "*://*/*.md?*",
        "file:///*"
      ],
      "js": ["assets/js/content.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "file:///*"
      ],
      "js": ["assets/js/content-directory.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "assets/js/*.js",
        "assets/css/*.css",
        "assets/images/pngs/*"
      ],
      "matches": ["<all_urls>", "file:///*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "assets/images/pngs/icon16.png",
    "48": "assets/images/pngs/icon48.png",
    "128": "assets/images/pngs/icon128.png"
  }
}
